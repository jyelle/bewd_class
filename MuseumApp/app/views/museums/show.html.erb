<h1><%= @museum.name %></h1>
<p><%= @museum.city %></p>

<hr>

<% @museum.paintings.each do |painting| %>
	<section>
		<h3><strong>Title</strong>: <%= link_to painting.tile, painting %></h3>
		<%= image_tag painting.image %>
		<p><strong>Year</strong>: <%= painting.year %></p>
		<p><strong>Style</strong>: <%= painting.style %></p>
		<hr>
	</section>
	<% end %>

<p><%= link_to "Edit Museum", edit_museum_path(@museum) %></p>
